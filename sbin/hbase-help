echo -e $BOLD$YELLOW"Apache HBase Help"$NOCOLOR$NOBOLD
echo

echo -e $GREEN$BOLD"HBase Status"$NOBOLD$NOCOLOR
echo
echo -e $YELLOW"dla hbase-status"$NOCOLOR
echo
echo -e $BOLD$GREEN"HBase Phoenix"$NOCOLOR$NOBOLD
echo
echo -e "Phoenix CLI                "$YELLOW"dla phoenix-cli"$NOCOLOR
echo
echo -e $GREEN$BOLD"HBase Commands"$NOCOLOR$NOBOLD$NOCOLOR
echo
echo -e "HBase CLI                  "$YELLOW"dla hbase-cli"$NOCOLOR
echo
echo -e $BOLD$GREEN"Command Examples"$NOCOLOR$NOBOLD
echo
echo "  help"
echo "  list"
echo "  create_namespace 'ns'"
echo "  create 'ns:test', 'cf'"
echo "  alter 'ns:test', 'cf2'"
echo "  list 'ns:test'"
echo "  put 'ns:test', 'row1', 'cf:a', 'value1'"
echo "  put 'ns:test', 'row2', 'cf:b', 'value2'"
echo "  put 'ns:test', 'row3', 'cf:c', 'value3'"
echo "  scan 'ns:test'"
echo "  scan 'ns:test', {VERSIONS => 3}"
echo "  get 'ns:test', 'row1'"
echo "  disable 'ns:test'"
echo "  drop 'ns:test'"
echo "  exit"
echo
echo -e "HBase Master WEB Interface        "$YELLOW"http://localhost:16010/master-status"$NOCOLOR
echo
echo -e "HBase Region Server WEB Interface "$YELLOW"http://localhost:16030/rs-status"$NOCOLOR
echo
echo -e "HBase REST Server                 "$YELLOW"http://localhost:21050/version/cluster"$NOCOLOR
echo -e "                                  "$YELLOW"http://localhost:21050/status/cluster"$NOCOLOR
echo
echo -e "HBase Thrift Server UI            "$YELLOW"http://localhost:9095"$NOCOLOR
echo -e "HBase Thrift Server               "$YELLOW"Port 9090"$NOCOLOR
echo

