#!/usr/bin/env bash

# Copyright (c) Datalayer https://datalayer.io
# Distributed under the terms of the Apache License, Version 2.0
# https://www.apache.org/licenses/LICENSE-2.0.txt

echo -e $BOLD$YELLOW"Initialize Datalayer DSP Solr"$NOCOLOR$NOBOLD
echo

dla solr-help

echo

export SCALE=2

$SOLR_HOME/bin/solr create \
  -c datalayer \
  -shards $SCALE \
  -replicationFactor $SCALE \
  -d $DLAHOME/etc/conf/solr/datalayer \
  -p 8983 \
  -force
# $SOLR_HOME/bin/solr zk upconfig -n datalayer -d $DLAHOME/etc/conf/solr -p 8983
