echo -e $BOLD$YELLOW"Removing Datalayer DSP from K8S"$NOCOLOR$NOBOLD
echo

function simple() {
  export RELEASE=dla-simple
  helm delete $RELEASE --purge
}

function config() {
  export RELEASE=dla-config
  helm delete $RELEASE --purge
}

function secret() {
  export RELEASE=dla-secret
  helm delete $RELEASE --purge
}

function k8s-dashboard() {
  export RELEASE=k8s-dashboard
  helm delete $RELEASE --purge
}

function kuber() {
  export RELEASE=dla-kuber
  helm delete $RELEASE --purge
}

function ldap() {
  export RELEASE=dla-ldap
  helm delete $RELEASE --purge
}

function ldapadmin() {
  export RELEASE=dla-ldapadmin
  helm delete $RELEASE --purge
}

function keycloak() {
  export RELEASE=dla-keycloak
  helm delete $RELEASE --purge
}

function solr() {
  export RELEASE=dla-solr
  helm delete $RELEASE --purge
}

function ingress() {
  export RELEASE=dla-ingress
  helm delete $RELEASE --purge
}

function iam() {
  export RELEASE=dla-iam
  helm delete $RELEASE --purge
}

function library() {
  export RELEASE=dla-library
  helm delete $RELEASE --purge
}

function jupyterhub() {
  export RELEASE=dla-jupyterhub
  helm delete $RELEASE --purge
}

function minio() {
  export RELEASE=dla-minio
  helm delete $RELEASE --purge
}

function studio() {
  export RELEASE=dla-studio
  helm delete $RELEASE --purge
}

function commands() {
  echo -e $YELLOW"ðŸ’›  Valid commands: [ simple | config | secret | k8s-dashboard | kuber | ldap | ldapadmin | keycloak | ingress | iam | solr | library | jupyterhub | minio | studio ]"$NOCOLOR 1>&2
}

CMDS="$1"

if [ -z "$CMDS" ]; then
  echo -e $RED$BOLD"ðŸ’”  No command to execute has been provided."$NOCOLOR$NOBOLD 1>&2
  echo
  commands
  echo
  exit 1
fi

function apply_cmd() {

  echo -e $BOLD"âœ‹  Removing service [$BLUE$1$NOCOLOR]."$NOBOLD
  echo

  case "$1" in

    simple)
      simple
      ;;

    config)
      config
      ;;

    secret)
      secret
      ;;

    k8s-dashboard)
      k8s-dashboard
      ;;

    kuber)
      kuber
      ;;

    ldap)
      ldap
      ;;

    ldapadmin)
      ldapadmin
      ;;

    keycloak)
      keycloak
      ;;

    solr)
      solr
      ;;

    ingress)
      ingress
      ;;

    iam)
      iam
      ;;

    library)
      library
      ;;

    jupyterhub)
      jupyterhub
      ;;

    minio)
      minio
      ;;

    studio)
      studio
      ;;

    *)
      echo -e $RED$BOLD"ðŸ’”  Unknown command: $1"$NOBOLD$NOCOLOR 1>&2
      echo
      commands
      echo
      exit 1

  esac

  echo
  echo -e $BOLD"ðŸ›‘  Service [$BLUE$1$NOCOLOR] is removed."$NOBOLD

}

IFS=',' read -ra CMD_SPLITS <<< "$CMDS"
for i in "${CMD_SPLITS[@]}"; do
  apply_cmd $i
  echo
done
