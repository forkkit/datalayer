{
  "include": [
    "src/*", "src/examples/AppExample.tsx",
  ],
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./lib",
    "declaration": true,
    "declarationDir": "./lib",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
    ],
    "paths": {
      "/assets/*": ["src/assets/*"],
      "assets/*": ["src/assets/*"],
    },
    "moduleResolution": "node",
    "strict": true,
    "noImplicitReturns": false,
    "noImplicitThis": false,
    "noImplicitAny": false,
    "allowJs": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "jsx": "react",
    "types": [
      "jest",
      "node",
      "react"
    ]
  }
}
